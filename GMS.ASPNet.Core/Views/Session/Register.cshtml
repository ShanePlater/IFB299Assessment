@model GMS.ASPNet.Core.Models.SessionViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<body class="register-bg">
    <div class="register-form">
        <section>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="title" id="reg-title">Create an account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <p class="reg-label">Personal Details</p>

                <div class="reg-form">
                    <div class="form-group" id="personaldetails">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="reg-form">
                    <div class="form-group" id="personaldetails">
                        <input asp-for="LastName" class="form-control" placeholder="Surname" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="reg-form">
                    <div class="form-group" id="personaldetails">
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <p class="reg-label">Contact Information</p>
                    <div class="reg-form" id="personaldetails">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="reg-form" id="personaldetails">
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Contact Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div id="passworddetails">
                    <p class="reg-label">Password</p>
                    <div class="reg-form" id="personaldetails">
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="reg-form" id="personaldetails">
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <p id="terms"> By creating an account you agree to our <a href="#" class="linkdark">Terms & Privacy</a>.</p>
                <button type="submit" class="default-button" id="registerbutton">Register</button>
            </form>
  
    </section>
<p id="altreg">Alternatively:</p>
    <section>
        <div class="social-login">
            <button class="loginBtn loginBtn--facebook">
                Login with Facebook
            </button>

            <button class="loginBtn loginBtn--google">
                Login with Google
            </button>
        </div>
    </section>
    </div>
</body>



        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
